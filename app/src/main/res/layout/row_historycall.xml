<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row_lstphone"
        android:padding="16dp"
        android:weightSum="5">
        <ImageView
            android:id="@+id/person_history"
            android:src="@drawable/ic_account_blue"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_history"
                android:text="Do The Tai"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:padding="7dp"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/number_history"
                android:layout_below="@+id/name_history"
                android:text="Do The Tai"
                android:padding="7dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date_history"
                android:layout_toRightOf="@+id/number_history"
                android:layout_below="@id/name_history"
                android:text="Do The Tai"
                android:textColor="#000"
                android:padding="7dp"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/call_history"
            android:src="@drawable/ic_call"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>